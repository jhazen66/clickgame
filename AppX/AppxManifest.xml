<?xml version="1.0" encoding="utf-8"?>
<!-- MSDN reference for AppX manifest creation: http://msdn.microsoft.com/en-us/library/windows/apps/br211473.aspx -->

<Package xmlns="http://schemas.microsoft.com/appx/2010/manifest" xmlns:m2="http://schemas.microsoft.com/appx/2013/manifest" xmlns:build="http://schemas.microsoft.com/developer/appx/2012/build" >
  <Identity Name="ClickGame" Version="1.0.0.0" Publisher="CN=JohnHazen" ProcessorArchitecture="neutral" />
  <Properties>
    <DisplayName>ClickGame</DisplayName>
    <PublisherDisplayName>John Hazen</PublisherDisplayName>
    <Logo>img\icon_50.png</Logo>
  </Properties>
  <Prerequisites>
    <OSMinVersion>6.3.0</OSMinVersion>
    <OSMaxVersionTested>6.3.0</OSMaxVersionTested>
  </Prerequisites>
  <Resources>
    <Resource Language="EN-US" />
  </Resources>
  <Applications>
    <Application Id="App" StartPage="default.html">
      <m2:VisualElements DisplayName="ClickGame" Description="ClickGame" ForegroundText="light" BackgroundColor="#0168a4" Square150x150Logo="img\icon_150.png" Square30x30Logo="img\icon_30.png">
        <m2:DefaultTile Square310x310Logo="img\icon_310.png" Wide310x150Logo="img\icon_150-wide.png" Square70x70Logo="img\icon_70.png"></m2:DefaultTile>
        <m2:SplashScreen Image="img\splash.png" BackgroundColor="#0168a4" />
        <m2:InitialRotationPreference>
          <m2:Rotation Preference="landscape" />
        </m2:InitialRotationPreference>
        <m2:ApplicationView MinWidth="width500" />
      </m2:VisualElements>
    </Application>
  </Applications>
  <Capabilities>
    <Capability Name="internetClient" />
  </Capabilities>

</Package>